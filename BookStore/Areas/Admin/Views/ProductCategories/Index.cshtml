@model IEnumerable<BookStore.Common.ProductCategory>

@{
    ViewBag.Title = "Thể loại";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, sortFieldName: "ID", rowsPerPage: 6);
}

@section header{
    Danh sách các thể loại
}

@section jsFooter{
    <script src="~/Assets/Admin/js/controller/managerController.js"></script>
}

@using (Html.BeginForm())
    {
        <div class="form-group">
            <div class="d-flex justify-content-center flex-wrap">
                @Html.Editor("searchString", new { htmlAttributes = new { @class = "form-control col-sm-12 col-md-4 m-2", @Placeholder = "Tên thể loại" } })
                <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            </div>
        </div>
    }

<p>
    @Html.ActionLink("Nhập thể loại mới", "Create")
</p>
<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                /*background-color: #ffffff;
                color: blue;*/
                background-color: blue;
                color: white;
                border-radius: 5px;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                /*padding: 1px 10px 2px 10px;*/
                padding: 3px 13px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }

        thead {
            background-color: #007bff;
        }

            thead a {
                color: white;
            }
    </style>
</head>
<body>
    <div id="gridContent bg-white">
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.All,
            alternatingRowStyle: "alternatingRowStyle",
            columns: new[]  // colums in grid
            {
                        grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
                        grid.Column("Name","Thể loại"),
                        grid.Column("DisplayOrder","Vị trí"),
grid.Column("CreatedDate","Ngày thêm"@*,format:@<text>@(item.CreatedDate.ToString("dd-MM-yyyy"))</text>*@),
grid.Column("Status","Status",format:@<text>@(item.Status?"Hiện":"Ẩn")</text>),
grid.Column("Chức năng", format: @<text>
        <a href="@Url.Action("Edit",
                                new { id = item.ID.ToString().Trim()})" class="edit-btn"><abbr title="Cập nhật dữ liệu"><img src="/images/edit.png" width="20" height="20" /></abbr></a>
        <a href="@Url.Action("Details",
                                new { id = item.ID.ToString().Trim()})" class="edit-btn"><abbr title="Xem chi tiết"><img src="/images/details.png" width="20" height="20" /></abbr></a>
        <a href="@Url.Action("Delete",
                                new { id = item.ID.ToString().Trim()})" class="edit-btn">
            <abbr title="Xóa dữ liệu">
                <img src="/images/delete.png" width="20" height="20" />
            </abbr>
        </a>
    </text>),

}
)
    </div>
</body>
</html>