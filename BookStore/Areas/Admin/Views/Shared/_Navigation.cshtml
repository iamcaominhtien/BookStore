@using BookStore.Common

@{
    string name = "Cao Minh Tien";
    try
    {
        var session = (UserLogin)Session[CommonConstant.ADMIN_SESSION];
        BookStoreEntities db = new BookStoreEntities();
        var user = db.Managers.SingleOrDefault(s => s.UserName == session.UserName);
        name = user.SirName + " " + user.FirstName;
    }
    catch { }
}

