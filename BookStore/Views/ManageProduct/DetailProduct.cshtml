<section class="breadcrumb-section set-bg" data-setbg="/Assets/Client/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Nhà sách Phương Nam</h2>
                    <div class="breadcrumb__option">
                        <a href="/">Home</a>
                        <a href="/san-pham/@ViewBag.ProductCategory.MetaTitle-@ViewBag.ProductCategory.ID">@ViewBag.ProductCategory.Name</a>
                        <span>@Model.Name</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
