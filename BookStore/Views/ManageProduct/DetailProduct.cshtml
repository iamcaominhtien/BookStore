<!-- Related Product Section Begin -->
<section class="related-product">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related__product__title">
                    <h2>Related Product</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in ViewBag.RelatedProduct)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mx-auto">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="/Images/@item.Image" style="background-size:262.5px 270px;height:270px !important">
                            <ul class="product__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6><a href="/chi-tiet/@item.MetaTitle-@item.ID">@item.Name</a></h6>
                            <h5>@item.Price.ToString("N0")<span>đ</span></h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Related Product Section End -->
